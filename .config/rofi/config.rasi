configuration {
    show-icons:                     true;
    display-drun: 					"applications";
    drun-display-format:            "{icon} {name}";
    disable-history:                false;
	click-to-exit: 					true;
    font:				 	        "Noto Sans 10";
}

@import "light.rasi"
@theme "clean.rasi"

window {
    background-color:               @BG;
    border:                  		0px;
    border-color:                  	@BGA;
    border-radius:                  10px;
    width:                          600px;
    height:                         400px;
    x-offset:                       0px;
    y-offset:                       125px;
}

prompt {
    enabled: 			    true;
    margin: 		            0px 0px 0px 8px;
    padding: 			    8px;
    background-color: 		    @BGA;
    text-color: 		    @FG;
    border:                  	    1px 1px 1px 1px;
    border-color:                   @BDR;
    border-radius:                  6px;
}

textbox-prompt-colon {
    expand: 		            false;
    str: 			    "ïŠ™";
    border-radius:                  6px;
    background-color:               @SEL;
    text-color:                     @BGA;
    padding:                        8px 12px 8px 12px;
    font:			    "Noto Sans 10";
}

entry {
    background-color:               @BGA;
    text-color:                     @FG;
    placeholder-color:              @FG;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search...";
    blink:                          true;
    border:                  		1px 1px 1px 1px;
    border-color:                  	@BDR;
    border-radius:                  8px;
    padding:                        8px;
}

inputbar {
    children: 			            [ textbox-prompt-colon,entry,case-indicator ];
    background-color:               #00000000;
    text-color:                     @FG;
    expand:                         false;
    border:                  	    0px 0px 0px 0px;
    border-radius:                  0px;
    border-color:                   @BDR;
    margin:                         0px 0px 0px 0px;
    padding:                        0px;
    position:                       center;
}

case-indicator {
    background-color:               @BG;
    text-color:                     @FG;
    spacing:                        0;
}

listview {
    background-color:               #00000000;
    columns:                        2;
    lines:			    8;
    spacing:                        5px;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
    scrollbar:                      false;
}

mainbox {
    background-color:               rgba(0,0,0,0);
    children:                       [ inputbar, listview ];
    spacing:                        15px;
    padding:                        30px;
}

element {
    background-color:   rgba(0,0,0,0);
    padding:	5px;
    border-radius:	8px;
}
element-icon {
    background-color:               inherit;
    text-color:                     inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           20px;
    border:                         0px;
}
element-text {
    background-color:               inherit;
    text-color:                     inherit;
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0;
    margin:                         2px 0px 2px 2px;
}
element.normal.normal {
    background-color: @UGT;
    text-color:       @FG;
}
element.normal.urgent {
    background-color: @UGT;
    text-color:       @BGA;
}
element.normal.active {
    background-color: @UGT;
    text-color:       @BGA;
}
element.selected.normal {
    background-color: @SEL;
    text-color:       @BGA;
}
element.selected.urgent {
    background-color: @UGT;
    text-color:       @BGA;
}
element.selected.active {
    background-color: @BG;
    text-color:       @FG;
}
element.alternate.normal {
    background-color: @BG;
    text-color:       @FG;
}
element.alternate.urgent {
    background-color: @BG;
    text-color:       @FG;
}
element.alternate.active {
    background-color: @BG;
    text-color:       @FG;
}

